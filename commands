#create hardlink ln and symbolic-link s: target LINK_NAME
ln target.* my_name
ls target.* my_name

#search with  GREP
#OPTIONS -n (line number) -i (case insensitive) -v (searches every line does not containt the desired word) -c(count lines) 
# '^and' = start wiht the word "and" 
# 'and$' = finishes wiht the word "and"


ls -l | grep YOOO //returns all desired files which have YOO in their name

grep -ni 'word' ./path_of_file/file.txt  //searches inside files

#grouping 
grep -E "(word1|word2)" ./path_of_the _search 


