#remove directory--------------------------------------------------------------------------------------
rmdir -rf ./path

#run script----------------------------------------------------------------------
./scripta_name.sh

#create hardlink ln and symbolic-link s: target LINK_NAME--------------------------------------------------
ln target.* my_name
ls target.* my_name

#search with  GREP-------------------------------------------------------------------
#OPTIONS -n (line number) -i (case insensitive) -v (searches every line does not containt the desired word) -c(count lines) 
# '^and' = start wiht the word "and" 
# 'and$' = finishes wiht the word "and"

egrep -o '^[^.]+' // grep until a desired character , in this example is the .

ls -l | grep YOOO //returns all desired files which have YOO in their name

grep -ni 'word' ./path_of_file/file.txt  //searches inside files

#grouping -----------------------------------------------------------------------------
grep -E "(word1|word2)" ./path_of_the _search 

#search and return characters from a file------------------------------------------------
cut -c2 file.txt //return the chars from each line o  second column 
cut -c2-3 file.txt //range 2-3th collumns 
cut -c2- file.txt //returns all the charactesrs from the second column to the EOL


#view content of files------------------------------------------------------
cat FILE_NAME

#change color------------------------------------------------------------
echo -e "\e[1;32m text color change \e[0m"


#sound------------------------------------------------------------------------------------
cat /proc/asound/cards  //view sound cards
aplay -l     //view sound cards
pactl set-sin-mute 0 1  //mute sink
pactl -- set-sink-volume 0 100%  //change volume sink
pactl stat  /view sinc status
